// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum Organisasi {
  OSIS
  MPK
}

model User {
  id              String    @id     @default(auto())    @map("_id")   @db.ObjectId
  nisn            String    @unique
  password        String    
  token           Boolean   @default(false)
  vote            Vote[]
  role            Role      @default(USER)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model Pemilihan {
  id              String    @id     @default(auto())    @map("_id")   @db.ObjectId
  judul           String
  organisasi      Organisasi
  kedaluwarsa     DateTime
  kandidat        Kandidat[]
  votes           Vote[]
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model Kandidat {
  id              String    @id     @default(auto())    @map("_id")   @db.ObjectId
  no_urut         Int
  nama            String
  kelas           String    
  jurusan         String
  foto            String
  moto            String
  visi            String
  misi            String
  votes           Vote[]
  pemilihan       Pemilihan @relation(fields: [pemilihanId], references: [id])
  pemilihanId     String    @db.ObjectId
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model Vote {
  id              String          @id     @default(auto())    @map("_id")   @db.ObjectId
  userId          String          @db.ObjectId
  pemilihanId     String          @db.ObjectId
  kandidatId      String          @db.ObjectId
  user            User            @relation(fields: [userId], references: [id])
  pemilihan       Pemilihan       @relation(fields: [pemilihanId], references: [id])
  kandidat        Kandidat        @relation(fields: [kandidatId], references: [id])
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
}
